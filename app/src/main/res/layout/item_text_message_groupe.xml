<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
    <RelativeLayout
            android:id="@+id/message_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rect_round_primary_color">
        <TextView
                android:id="@+id/textView_sender_name_txt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:gravity="end"
                tools:text="sender name"
                android:fontFamily="@font/dancing_script_bold"/>
        <TextView
                android:id="@+id/textView_message_text_group"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="120dp"
                android:layout_below="@+id/textView_sender_name_txt"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:paddingStart="8dp"
                android:layout_margin="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                tools:text="@string/empty_message" />
        <TextView
                android:id="@+id/textView_message_time_groupe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_message_text_group"
                android:layout_alignEnd="@id/textView_message_text_group"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                tools:text="3/15/2018 3:00 PM"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_below="@+id/textView_message_time"
                android:layout_alignEnd="@+id/textView_message_time"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/button_no_translate_item"
                    android:background="@drawable/ronded_button_originale"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:textAllCaps="false"
                    android:textSize="11dp"
                    android:layout_marginRight="10dp"
                    android:text="Original"/>
            <Button
                    android:id="@+id/button_translate_item_groupe"
                    android:background="@drawable/ronded_button_langue"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textAllCaps="false"
                    android:text="fr"/>
            <Button
                    android:id="@+id/button_translate_demarer_chat"
                    android:layout_margin="3dp"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:textAllCaps="false"
                    android:text="fr"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>